{% extends 'base.html.twig' %}

{% block title %}Tableau de bord{% endblock %}

{% block body %}
<h1>Tableau de Bord Administrateur</h1>

<form action="add_element.php" method="POST">
    <label for="nom_element">Nom de l'élément :</label>
    <input type="text" id="nom_element" name="nom_element" required><br>

    <label for="type_element">Type d'élément :</label>
    <select id="type_element" name="type_element">
        <option value="licence">Licence</option>
        <option value="adhesion">Adhésion</option>
        <option value="forfait">Forfait</option>
        <option value="regate">Régate / Cabotage</option>
    </select><br>

    <label for="tarif_element">Tarif :</label>
    <input type="number" step="0.01" id="tarif_element" name="tarif_element" required><br>

    <button type="submit">Ajouter l'élément</button>
</form>

{% endblock %}
