<h1>Mes sorties</h1>

<h1>Mes sorties</h1>

{% if plannings is empty %}
    <p>Aucune sortie programmée.</p>
{% else %}
    {% for planning in plannings %}
        <h2>Sortie du {{ planning.date|date('d/m/Y') }}</h2>
        <p>Bateau : {{ planning.bateautype.nom }}</p>
        <p>Type de sortie : {{ planning.typeJournee|join(', ') }}</p>
        <p>Membres participants :</p>
        <ul>
            {% for participant in planning.participants %}
                <li>{{ participant.nom }} {{ participant.prenom }}</li>
            {% else %}
                <li>Aucun participant pour cette sortie.</li>
            {% endfor %}
        </ul>
    {% endfor %}
{% endif %}

