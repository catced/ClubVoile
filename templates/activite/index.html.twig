{% extends 'base.html.twig' %}

{% block title %}Nos activités{% endblock %}

{% block body %}


<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Nos Activités</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f8f8;
            padding: 20px;
        }

        h1 {
            text-align: center;
            color: blue;
        }

        .grid-container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            max-width: 1200px;
            margin: 0 auto;
        }

        .cadre {
            background-color: #36d3e7; /* Bleu pour le fond des cadres */
            border: 1px solid #ddd;
            border-radius: 8px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
            display: flex;
            flex-direction: column;
            height: 100%; /* Le cadre prend toute la hauteur */
            overflow: hidden; /* Assure que l'image ne déborde pas */
            color: white; /* Texte blanc pour contraste avec le fond bleu */
        }

        .cadre img {
            width: 100%;
            height: 100px; /* Ajuste la hauteur de l'image */
            object-fit: cover; /* Remplir le cadre sans déformation */
            border-radius: 0; /* Enlève les coins arrondis de l'image */
        }

        .nom {
            font-size: 18px;
            font-weight: bold;
            margin: 10px 0;
            padding: 0 10px;
        }

        .poste {
            font-size: 14px;
            color: white; /* Assure que le texte reste visible sur fond bleu */
            padding: 0 10px;
            margin-bottom: 10px;
        }

        .cadre .poste.bold {
            font-weight: bold;
        }
    </style>
</head>
<body>

    <h1>Nos activités</h1>

    <div class="grid-container">
        <!-- Cadre 1 -->
        <div class="cadre">
            <img src="{{ asset('images/cours1.jpeg') }}" alt="Photo activité">
            <div class="nom">La formation théorique</div>
            <div class="poste bold">15 sessions thématiques sur l'année</div>
            <div class="poste">Au programme :</div>
            <div class="poste">Termes maritimes</div>
            <div class="poste">Gréer et régler les voiles</div>
            <div class="poste">Sécurité à bord</div>
            <div class="poste">Matelotage</div>
            <div class="poste">Amarrage</div>
            <div class="poste">Règlementation</div>
            <div class="poste">Météo marine</div>
            <div class="poste">Cartographie</div>
            <div class="poste">Préparation à la navigation</div>
            <div class="poste">Carénage</div>
            <div class="poste">Informatique à bord</div>
        </div>

        <!-- Cadre 2 -->
        <div class="cadre">
            <img src="{{ asset('images/navigation.jpeg') }}" alt="Photo activité">
            <div class="nom">La navigation</div>
            <div class="poste">sur notre flotte</div>
            <div class="poste">ou des navires de propriétaires</div>
        </div>

        <!-- Cadre 3 -->
        <div class="cadre">
            <img src="{{ asset('images/croisiere.jpeg') }}" alt="Photo activité">
            <div class="nom">Les croisières</div>
            <div class="poste">de printemps</div>
            <div class="poste">d'été</div>
            <div class="poste">d'automne</div>
        </div>

        <!-- Cadre 4 -->
        <div class="cadre">
            <img src="{{ asset('images/regate.jpeg') }}" alt="Photo activité">
            <div class="nom">Les régates</div>
            <div class="poste">sur la mer</div>
            <div class="poste">sur l'étang de Thau</div>
        </div>

        <!-- Cadre 5 -->
        <div class="cadre">
            <img src="{{ asset('images/convivialite.jpeg') }}" alt="Photo activité">
            <div class="nom">Les moments de convivialité</div>
            <div class="poste">les repas du samedi midi</div>
        </div>
    </div>

</body>
</html>
{% endblock %}


